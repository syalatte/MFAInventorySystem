@model IEnumerable<MFAInventorySystem.Models.tb_vendingmachine>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">Manage Vending Machine</h4>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-dark" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.v_location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.v_cashInSlot)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.v_profit)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.v_location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.v_cashInSlot)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.v_profit)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.v_id }, new { @class = "btn btn-dark btnStyle" }) 
                        @Html.ActionLink("Details", "Details", new { id = item.v_id }, new { @class = "btn btn-secondary btnStyle" }) 
                        @Html.ActionLink("Delete", "Delete", new { id = item.v_id }, new { @class = "btn btn-danger btnStyle" })
                    </td>
                </tr>
            }

        </table>
        </div>
</div>