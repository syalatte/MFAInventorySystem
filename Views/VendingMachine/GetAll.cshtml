@model IEnumerable<MFAInventorySystem.Models.tb_vendingmachine>

@{
    ViewBag.Title = "Vending Machine List";
    Layout = null;
}


<!-- DataTales Example -->
<div class="card shadow mb-4">
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["AlertMessage"]
        </div>

    }
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">MFA Vending Machine</h4>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-striped table-bordered table-hover table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.v_location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.v_cashInSlot)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.v_profit)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.v_location)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.v_cashInSlot)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.v_profit)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>