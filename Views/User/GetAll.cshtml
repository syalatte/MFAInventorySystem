@model IEnumerable<MFAInventorySystem.Models.tb_user>

@{
    ViewBag.Title = "Users List";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<body>

    <br />

    <!-- Begin Page Content -->
    <div class="container-fluid">
        @if (TempData["AlertMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["AlertMessage"]
            </div>

        }
        <!-- Page Heading -->
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">User List</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <hr />
                    <table id="example1" class="table table-striped table-bordered table-hover table-sm" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.u_id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.u_name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.u_contact)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.u_email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tb_usertype.ut_desc)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.u_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.u_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.u_contact)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.u_email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tb_usertype.ut_desc)
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>


        </div>

    </div>
</body>
</html>
